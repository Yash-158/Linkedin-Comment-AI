{
  "manifest_version": 3,
  "name": "LinkedIn Comment Generator",
  "version": "1.2",
  "description": "Generate professional comments for LinkedIn posts with customizable tones and auto-comment feature",
  "permissions": [
    "activeTab",
    "storage",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://*.linkedin.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.linkedin.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/logo48.png",
      "48": "icons/logo48.png",
      "128": "icons/logo128.png"
    }
  },
  "icons": {
    "16": "icons/logo48.png",
    "48": "icons/logo48.png",
    "128": "icons/logo128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/logo.png"],
      "matches": ["https://*.linkedin.com/*"]
    }
  ]
}